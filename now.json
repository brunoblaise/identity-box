{
  "version": 2,
  "name": "Identity Box",
  "builds": [
    { "src": "workspaces/hush-hush/package.json", "use": "@now/next" },
    { "src": "workspaces/homepage/package.json", "use": "@now/static-build", "config": {"distDir": "public"} }
  ],
  "routes": [
    { "src": "/hush-hush", "dest": "/workspaces/hush-hush/", "continue": true },
    { "src": "/hush-hush/(.*)", "dest": "/workspaces/hush-hush/$1", "continue": true },
    { "src": "/(?<path>.*)", "dest": "/workspaces/homepage/$path", "continue": true}
  ],
  "scope": "identity-box",
  "alias": "idbox"
}
